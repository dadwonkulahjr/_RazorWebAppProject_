@model List<DepartmentHeadCount>


<h3 class="text-center text-primary">
    Employee Head Count Summary&nbsp;<i class="fas fa-user-alt"></i>
</h3>
<hr />
<table class="table table-bordered table-hover mb-2">
    <thead>
        <tr>
            <th>Department</th>
            <th>Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var deptCount in Model)
        {
            <tr>
                <td>
                    @deptCount.Department
                </td>
                <td>
                    @deptCount.Count.ToString()
                </td>
            </tr>
        }
        @*@for (int i = 0; i < Model.Count; i++)
